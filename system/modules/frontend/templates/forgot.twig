<div class="panel panel-default">
  <div class="panel-body">
    <form method="post" class="forgot form-horizontal">
      {{ honeypot|raw }}
      <input type="hidden" name="token" value="{{ token() }}">
      {% if forgetful_user is not empty %}
          <div class="form-group{{ error('email', ' has-error') }}">
            <label class="control-label col-md-2">{{ text('E-mail') }}</label>
            <div class="col-md-4">
              <input class="form-control" name="user[email]" value="{{ user['email'] ?? '' }}" autofocus>
              <div class="help-block">{{ error('email') }}</div>
            </div>
          </div>
      {% else %}
          <div class="form-group">
            {{ text('Hello %name. Please type your new password', {'%name': forgetful_user['name']}) }}
          </div>
          <div class="form-group{{ error('password', ' has-error') }}">
            <label class="control-label col-md-2">{{ text('Password') }}</label>
            <div class="col-md-4">
              <input class="form-control" type="password" name="user[password]" autocomplete="new-password" autofocus>
              <div class="help-block">{{ error('password') }}</div>
            </div>
          </div>
          {% endif %}
          <div class="form-group">
            <div class="col-md-4 col-md-offset-2 text-right">
              <button class="btn btn-default" name="reset" value="1">
                {% if forgetful_user is not empty %}
                    {{ text('Change password') }}
                {% else %}
                    {{ text('Reset password') }} 
                {% endif %}
              </button>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-4 col-md-offset-2">
              <ul class="list-inline">
                <li><a href="{{ url('login') }}">{{ text('Login') }}</a></li>
                <li><a href="{{ url('register') }}">{{ text('Register account') }}</a></li>
              </ul>
            </div>
          </div>
      </form>
    </div>
  </div>
