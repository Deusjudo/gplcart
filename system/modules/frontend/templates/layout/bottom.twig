{% if js_bottom is not empty %}
    {% for data in js_bottom %}
        {% if data.text is not empty %}
            {% if data.asset is not empty %}
                {% if data.condition is not empty %}
                    <!--[{{ data.condition }}]>
                    <script>{{ data.asset|raw }}</script>
                    <![endif]-->
                {% else %}
                    <script>{{ data.asset|raw }}</script>
                {% endif %}
            {% endif %}
        {% else %}
            {% if data.condition is not empty %}
                <!--[{{ data.condition }}]>
                <script src="{{ data.key }}"></script>
                <![endif]-->
            {% else %}
                <script src="{{ data.key }}"></script>
            {% endif %}
        {% endif %}
    {% endfor %}
{% endif %}