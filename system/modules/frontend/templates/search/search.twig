<div class="panel panel-default">
  <div class="panel-body">
    {% if results is not empty %}
        {{ navbar|raw }}
        {{ results }}
        {% if pager is not empty %}
            <div class="row">
              <div class="col-md-12 text-right">
                {{ pager|raw }}
              </div>
            </div>
        {% endif %}
    {% else %}
        {{ text('No products found. Try another search keyword') }}
    {% endif %}
  </div>
</div>