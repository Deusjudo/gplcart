<div class="panel panel-default">
  <div class="panel-body">
    <form method="post" id="login" class="login form-horizontal">
      {{ honeypot|raw }}
      <input type="hidden" name="token" value="{{ token() }}">
      <div class="form-group{{ error('email', ' has-error') }}">
        <label class="control-label col-md-2">{{ text('E-mail') }}</label>
        <div class="col-md-4">
          <input class="form-control" name="user[email]" value="{{ user['email'] ?? '' }}" autofocus>
          <div class="help-block">{{ error('email') }}</div>
        </div>
      </div>
      <div class="form-group{{ error('password', ' has-error') }}">
        <label class="control-label col-md-2">{{ text('Password') }}</label>
        <div class="col-md-4">
          <input class="form-control" type="password" name="user[password]">
          <div class="help-block">{{ error('password') }}</div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-1 col-md-offset-2">
          <button class="btn btn-default" name="login" value="1">{{ text('Log in') }}</button>
        </div>
        <div class="col-md-3 text-right">
      <ul class="list-inline">
        <li><a href="{{ url('register') }}">{{ text('Register') }}</a></li>
        <li><a href="{{ url('forgot') }}">{{ text('Forgot password') }}</a></li>
      </ul>
        </div>
      </div>
    </form>
  </div>
</div>
