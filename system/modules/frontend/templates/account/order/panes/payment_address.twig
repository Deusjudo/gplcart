{% if order['payment_address'] and order['payment_address'] != order['shipping_address'] %}
    <div class="panel panel-default order-payment-address" data-equal-height="true">
      <div class="panel-heading clearfix">{{ text('Payment address') }}</div>
      <div class="panel-body">
        {% if order['address_translated']['payment'] is not defined %}
            {{ text('Unknown') }}
        {% else %}
            <table class="table table-condensed">
              <tbody>
                {% for name,value in order['address_translated']['payment'] %}
                    <tr>
                      <td>{{ name }}</td>
                      <td>{{ value }}</td>
                    </tr>
                {% endfor %}
              </tbody>
            </table>
        {% endif %}
      </div>
    </div>
{% endif %}
