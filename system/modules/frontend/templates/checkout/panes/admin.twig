{% if admin is not empty %}
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="form-group">
          <label class="col-md-2 control-label">{{ text('Customer') }}</label>
          <div class="col-md-2">{{ user['name'] }} ({{ user['email'] }})</div>
        </div>
        <div class="form-group">
          <label class="col-md-2 control-label">{{ text('Status') }}</label>
          <div class="col-md-2">
            <select class="form-control" name="order[status]">
              {% for status_id,status_name in statuses %}
                  <option value="{{ status_id }}"{{ (order['status'] is defined and order['status'] == status_id) ? ' selected' : '' }}>
                    {{ status_name }}
                  </option>
              {% endfor %}
            </select>
          </div>
        </div>
        {% if order['user_id'] is defined and order['user_id'] is not empty %}
            <div class="form-group required{{ error('log', ' has-error') }}">
              <label class="col-md-2 control-label">{{ text('Log message') }}</label>
              <div class="col-md-4">
                <textarea class="form-control" name="order[log]">{{ order['log'] ?? '' }}</textarea>
                <div class="help-block">
                  {{ error('log') }}
                  <div class="text-muted">
                    {{ text('Enter a short clear explanation of the update you are making') }}
                  </div>
                </div>
              </div>
            </div>
        {% endif %}
      </div>
    </div>
{% endif %}
